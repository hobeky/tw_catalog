{% extends 'admin/index.html.twig' %}

{% block title %}Category index{% endblock %}

{% block content %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Parent</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.parentId }}</td>
                <td>
                    <a href="{{ path('category.show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category.edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category.new') }}">Create new</a>
{% endblock %}
