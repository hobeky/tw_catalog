<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Zabudnuté heslo{% endblock %}</title>

    {% block stylesheets %}
        <!-- Custom fonts for this template-->
        <link href="{{ asset('assets/admin/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css') }}"
              rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
              rel="stylesheet">
        {% include "partial/_stylesheet.html.twig" with {path: asset('asset/user/vendor/fontawesome/css/all.min.css')} %}

        <!-- Custom styles for this template-->
        <link href="{{ asset('assets/admin/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css') }}"
              rel="stylesheet">

        {% include "partial/_stylesheet.html.twig" with {path: "https://cdn.datatables.net/v/bs4/dt-1.10.22/b-1.6.4/rr-1.2.7/datatables.min.css"} %}
        {% include "partial/_stylesheet.html.twig" with {path: "https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css"} %}
    {% endblock %}

</head>

<body class="bg-gradient-primary">

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Zabudnuté heslo</h1>
                                </div>
                                {% for flashError in app.flashes('reset_password_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                                {{ form_start(resetForm, {
                                    'attr': {
                                        'class': 'user'
                                    }
                                }) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(resetForm.plainPassword.first, { 'attr': {
                                            'class': 'form-control form-control-user',
                                            'id' : 'exampleInputPassword',
                                            'placeholder' : 'Nové heslo'
                                        } }) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(resetForm.plainPassword.second, { 'attr': {
                                            'class': 'form-control form-control-user',
                                            'id' : 'exampleRepeatPassword',
                                            'placeholder' : 'Overenie hesla'
                                        } }) }}
                                    </div>
                                </div>
                                <div>
                                    <small>
                                        Vytvorte si nové heslo, ktoré budete používať na prihlasovanie na túto stránku.
                                    </small>
                                </div>

                                <button class="btn btn-primary">Potvrdiť nové heslo</button>
                                {{ form_end(resetForm) }}
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="{{ path('app_forgot_password_request') }}">Zabudnuté
                                        heslo?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="{{ path('app_register') }}">Vytvoriť účet!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

{% block javascripts %}
    <!-- Bootstrap core JavaScript-->
    <script src="{{ asset('assets/admin/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/admin/startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{ asset('assets/admin/startbootstrap-sb-admin-2-gh-pages/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('assets/admin/startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js') }}"></script>
{% endblock %}
</body>

</html>
