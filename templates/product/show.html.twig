{% extends 'admin/index.html.twig' %}

{% block title %}Produkt{% endblock %}

{% block content %}
    <h1>Produkt</h1>

    <div class="row">
        {% for image in product.image %}
            <img src="{{ image|image("small") }}" style="max-height: 250px; margin: 20px;">
        {% endfor %}
    </div>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Titulok</th>
            <td>{{ product.title }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ product.text }}</td>
        </tr>
        <tr>
            <th>Vytvorené</th>
            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Cena</th>
            <td>{{ product.price }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('product.index') }}">späť na zoznam</a>

    <a href="{{ path('product.edit', {'id': product.id}) }}">upraviť</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
